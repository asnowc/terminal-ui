{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "lib": ["ESNext"],
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "#rt/*": ["./src/*"],
            "@asnc/terminal-ui/*": ["./src/*"]
        },
        "noEmit": true
    },
    "exclude": ["node_modules"],
    "include": ["src", "test", "performance"]
}
